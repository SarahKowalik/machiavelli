<div class="btn-group">
	<%= link_to "", refresh_path, 
			class: "btn btn-xs btn-default icon-refresh",  
			style: "line-height:inherit",
			data: { toggle: "tooltip-down", :'original-title' => "Click to refresh metrics"},

			onClick: "$(this).addClass('icon-spin')"%>
</div>
<div class="btn-group">
	<% navbar_buttons(:graph, ["standard","stacked","horizon"]).each do |a| %>
		<%= a.html_safe %>
	<% end %>
</div>
<div class="btn-group">
	<% navbar_buttons(:start, ["10min","1h","3h","1d","1w","2w"]).each do |a| %>
		<%= a.html_safe %>
	<% end %>
</div>
